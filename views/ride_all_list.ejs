<!DOCTYPE html>
<html lang="en">
  
<head>
    <%- include('./partials/head'); -%>
    
</head>
<body onload="startTime()">
    <%- include('./partials/header_sidebar'); -%>
    
    <!-- tap on top starts-->

        <!-- Page Sidebar Ends-->
        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%=lan.All%> <%=lan.Rides%> <%=lan.List%></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><%=lan.Dashboard%></li>
                    <li class="breadcrumb-item active"><%=lan.All%> <%=lan.Rides%> <%=lan.List%></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive theme-scrollbar">
                                <table class="display" id="basic-1">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th><%=lan.Rider%></th>
                                            <th><%=lan.Driver%></th>
                                            <th><%=lan.Pickup%> <%=lan.Location%></th>
                                            <th><%=lan.Destination%></th>
                                            <th><%=lan.Ride%> <%=lan.Fare%></th>
                                            <th><%=lan.Status%></th>
                                            <th><%=lan.Action%></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var i = 1 %>
                                        <% rd.forEach((data) => { %>
                                            <tr>
                                                <td><%= i %></td>
                                                <td><%= data.cname %></td>
                                                <td><%= data.dfname %> <%= data.dlname %></td>
                                                <td><%= data.pic_address %></td>
                                                <td><%= data.drop_address %></td>
                                                <td>
                                                    <% if (data.status == '0') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.New%> <%=lan.Ride%></span>
                                                    <% } else if (data.status == '1') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Accept%> <%=lan.Ride%></span>
                                                    <% } else if (data.status == '2') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Arrived_at_the_location%></span>
                                                    <% } else if (data.status == '3') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Conform%> <%=lan.Ride%></span>
                                                    <% } else if (data.status == '4') { %>
                                                        <span class="badge badge-danger p-2"><%=lan.Ride%> <%=lan.Cancel%></span>
                                                    <% } else if (data.status == '5') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Ride%> <%=lan.Start%></span>
                                                    <% } else if (data.status == '6') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Ride%> <%=lan.End%></span>
                                                    <% } else if (data.status == '7') { %>
                                                        <span class="badge badge-warning p-2"><%=lan.Waiting%> <%=lan.Payment%></span>
                                                    <% } else if (data.status == '8') { %>
                                                        <span class="badge badge-success p-2"><%=lan.Complete%></span>
                                                    <% }; %>
                                                </td>
                                                <td class="invosymbol"><%= data.price %></td>
                                                <td>
                                                    <ul class="action">
                                                        <li>
                                                            <a class="btn btn-outline-primary b-r-10" style="padding: 4px 10px;" href="/rides/alldetail?u=<%= data.req_id %>&c=<%= data.c_id %>&s=<%= data.rides %>"><i class="icon-info-alt"></i> <%=lan.Detail%></a>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        <% i++ %>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

    <%- include('./partials/footer'); -%>
    <%- include('./partials/script'); -%>
  </body>
</html>